<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WorkTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_300</item>
        <item name="colorPrimaryVariant">@color/blue_500</item>
        <item name="colorOnPrimary">@color/blue_600</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/blue_600</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomNavColor">@color/blue_500</item>
        <item name="loginButtonColor">@color/blue_300</item>
        <item name="textColor">@color/light_grey</item>
        <item name="backgroundColor">@color/blue_600</item>

        <item name="toolbarBackgroundColor">@color/blue_600</item>
        <item name="drawerBackgroundColor">@color/blue_400</item>
    </style>
</resources>